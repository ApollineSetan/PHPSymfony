{% extends 'base.html.twig' %}

{% block title %}MÉTÉO - {{ city }}{% endblock %}

{% block body %}
<br>

<form action="{{ path('app_weather') }}" method="get" style="text-align: center; margin-bottom: 20px;">
    <label for="city" style="font-size: 18px; color: #333;">Entrez une ville :</label>
    <input type="text" id="city" name="city" value="{{ city }}" style="font-size: 18px; padding: 5px; border-radius: 5px;">
    <button type="submit" style="padding: 5px 10px; background-color: #4c6275; color: white; border: none; border-radius: 5px;">Rechercher</button>
</form>

<div style="max-width: 400px; margin: 0 auto; padding: 20px; text-align: center; background-color: #4c6275; border-radius: 15px; box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);">
    <h1 style="font-size: 24px; color: #ffffff;">Météo à {{ city }}</h1>
    <br>
    <p style="font-size: 18px; color: #c7c7c7;">Pays : <strong>{{ country }}</strong></p>
    <p style="font-size: 18px; color: #c7c7c7;">Température : <strong>{{ temperature }} °C</strong></p>
    <p style="font-size: 18px; color: #c7c7c7;">Humidité : <strong>{{ humidity }} %</strong></p>
    <p style="font-size: 18px; color: #c7c7c7;">Vitesse du vent : <strong>{{ windSpeed }} km/h</strong></p>
    <br>
    <br>
    <p style="font-size: 18px; color: #c7c7c7;"><em>{{ description }}</em></p>
    <div style="margin: 20px 0;">
        <img src="{{ iconURL }}" alt="icone météo" style="width: 120px; height: auto; display: block; margin: 0 auto;">
    </div>
</div>
<br>

{% endblock %}
